.enroll-wrap {
    padding: 30rpx;
    padding-bottom: 160rpx;
}

.enroll-input {
    width: 100%;
    border: 1rpx solid #c8c8cd;
    height: 86rpx;
    line-height: 86rpx;
    font-size: 30rpx;
    color: #454649;
    background-color: #ffffff;
    padding: 0 35rpx;
    box-sizing: border-box;
    border-radius: 8rpx;
    margin-bottom: 30rpx;
}

.publish-btn-wrap {
    padding: 26rpx 30rpx;
    background-color: #ffffff;
    position: fixed;
    left: 0;
    bottom: 0;
    width: 100%;
    box-sizing: border-box;
    z-index: 999;
    box-shadow: 0rpx 5rpx 20rpx #999999;
}

.publish-btn {
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    background-color: #c52424;
    font-size: 36rpx;
    color: #ffffff;
    text-align: center;
    border-radius: 8rpx;
}

.enroll-check {
    width: 100%;
    border: 1rpx solid #c8c8cd;
    height: 86rpx;
    line-height: 86rpx;
    font-size: 30rpx;
    color: #2d2e33;
    background-color: #ffffff;
    box-sizing: border-box;
    border-radius: 8rpx;
    margin-bottom: 30rpx;
    padding: 0 35rpx;
}

.enroll-checkbox {
    width: 32rpx;
    height: 60rpx;
    background-size: 32rpx 32rpx;
    background-position: center;
    background-repeat: no-repeat;
    margin-right: 15rpx;
    display: inline-block;
    vertical-align: middle;
    margin-top: -6rpx;
    background-image: url(http://eventsocial-1253427581.cossh.myqcloud.com/v1.0/checkbox.png); 
}

.enroll-checkbox-checked {
     background-image: url(http://eventsocial-1253427581.cossh.myqcloud.com/v1.0/checkbox_selected.png);    
}